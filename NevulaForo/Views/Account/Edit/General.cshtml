@model NevulaForo.Models.ViewModels.GeneralEditUserVM
@{
    ViewData["Title"] = "Editar perfil";
    Layout = "~/Views/Account/Edit/_Layout.cshtml";
}

<section class="container__section">
    <h2 class="title__edit">Ajustes generales</h2>

    <form asp-controller="Account" asp-action="EditGeneral" method="POST">

        <div asp-validation-summary="ModelOnly"></div>

        <div class="form-group">
            <label for="" class="input-title">Nombre de usuario</label>
            <input type="text" name="username" asp-for="Username" class="" value="@Model.Username">
            <span asp-validation-for="Username"></span>
        </div>

        <div class="form-group">
            <label for="email" class="input-title">Dirección de correo</label>
            <input type="email" name="email" asp-for="Email" class="" value="@Model.Email">
            <span asp-validation-for="Email"></span>
        </div>

        <div class="container__full-name">
            <div class="form-group container__name">
                <label for="name" class="input-title">Nombre</label>
                <input type="text" name="name" asp-for="Name" class="" value="@Model.Name">
                <span asp-validation-for="Name"></span>
            </div>

            <div class="form-group container__surname">
                <label for="surname" class="input-title">Apellido</label>
                <input type="text" name="surname" asp-for="Surname" class="" value="@Model.Surname">
                <span asp-validation-for="Surname"></span>
            </div>
        </div>


        <div class="form-group">
            <label for="" class="input-title">Descripción</label>
            <textarea name="description" id="" maxlength="250" asp-for="Description" value="@Model.Description" placeholder="Agrega una descripción"></textarea>
            <span asp-validation-for="Description"></span>
        </div>

        <div class="form-submit">
            <div>
                <a asp-controller="Account" asp-action="Delete" class="btn_edit-delete" id="edit_general-delete">Eliminar cuenta</a>
            </div>
            <div>
                <button type="reset" class="btn_edit-reset" id="edit_general-reset">Descartar</button>
                <button type="submit" class="btn_edit-submit" id="edit_general-submit">Guardar cambios</button>
            </div>
        </div>
    </form>

</section>

