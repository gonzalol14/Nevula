@model ErrorViewModel
@{
    ViewData["Title"] = "Error";
}
@section Styles {
    <link rel="stylesheet" href="~/css/errors.css" asp-append-version="true" />
}


<div class="container__data-error">
    <div class="type-error">
        <p>ERROR @ViewData["StatusCode"]</p>
    </div>
    <div class="container__error-msj">
        <h1 class="msj-title">@ViewData["TitlePage"]</h1>
        <p class="msj-details">@ViewData["Details"]</p>
    </div>
    <div class="btn-back">
        <a asp-controller="Home" asp-action="Index">Volver a la página de inicio</a>
    </div>
</div>

